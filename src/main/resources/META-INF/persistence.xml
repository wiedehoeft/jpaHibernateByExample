<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="airport">
        <class>jpaHibernate.model.Pilot</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="org.h2.Driver"></property>
            <property name="hibernate.connection.url" value="jdbc:h2:~/test"></property>
            <property name="connection.username" value="sa"></property>
            <property name="connection.password" value=""/>
            <property name="dialect" value="org.hibernate.dialect.H2Dialect"></property>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"></property>
        </properties>
    </persistence-unit>
</persistence>